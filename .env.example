# Backend environment variables example
# Copy to .env and fill values before running

# App
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgres://user:pass@localhost:5432/dbname

# Stripe (optional, used for card flows)
STRIPE_SECRET_KEY=

# Mobile money configuration (Stripe-only)
# Enable Stripe mobile-money payment types where supported in your Stripe account
STRIPE_MOBILE_MONEY_ENABLED=true
STRIPE_MOBILE_MONEY_SIMULATE=false

# Other flags
NODE_ENV=development
